<html>
  <head>
    <title>Edit Doctor</title>
  </head>
  <body>
    <h1>Update the {{ doctor.getName }} doctor </h1>

    <form action="/doctors/{{ doctor.getId }}" method="post">
      <input name="_method" type="hidden" value="patch">

      <label for="name">Rename your doctor:</label>
      <input id="name" name="name" type="text">

      <button type="submit">Update</button>
    </form>
    <form action="/doctors/{{ doctor.getId }}" method="post">
      <input name="_method" type="hidden" value="delete">

      <button type="submit">Delete this doctor</button>
    </form>
  </body>
</html>
